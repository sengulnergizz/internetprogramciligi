    <script>
       document.getElementById("idheader").style.color = "green";

let ul = document.getElementById("task-list");

// for döngüsüyle görevleri çoğalt
for (let i = 1; i <= 5; i++) {
    let li = `
        <li class="list-group-item">
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="task${i}">
                <label class="form-check-label" for="task${i}">Görev ${i}</label>
            </div>
        </li>
    `;
    ul.insertAdjacentHTML("beforeend", li);
}


    </script>

